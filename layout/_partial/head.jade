meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

if config.author
  meta(name='author', content=config.author)

block page_description
  meta(name='description', content=config.description)

title
  block window_title
    = config.title
//- link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)

link(href=config.root + 'favicon.png', rel='icon')

link(rel='alternate', href=theme.rss ? theme.rss : config.root + 'atom.xml', title=config.title, type='application/atom.xml')

link(href='http://fonts.googleapis.com/css?family=Open+Sans:400', rel='stylesheet')
link(href='http://fonts.googleapis.com/css?family=Source+Code+Pro:400,600', rel='stylesheet', type='text/css')
link(rel='stylesheet', href=config.root + 'stylesheets/app.css')

if config.google_analytics.tracking_id
  script(type='text/javascript').
    (function(i,s,o,g,r,a,m){
      i['GoogleAnalyticsObject']=r;
      i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},
      i[r].l=1*new Date();
      a=s.createElement(o),m=s.getElementsByTagName(o)[0];
      a.async=1;a.src=g;
      m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '#{config.google_analytics.tracking_id}', 'auto');
    ga('send', 'pageview');
